{
  "name": "rainbowgold-tap",
  "version": "1.0.0",
  "description": "Tap to earn RainbowGold Points in this addictive clicker game with World ID integration and real WLD rewards",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "rollup -c rollup.config.js",
    "build:server": "echo 'Server build complete'",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/ api/ lib/ --ext .js",
    "lint:fix": "eslint src/ api/ lib/ --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css,html}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "deploy": "vercel --prod",
    "deploy:staging": "vercel",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "backup": "node scripts/backup.js",
    "analyze": "node scripts/analyze-bundle.js",
    "security-check": "npm audit && snyk test",
    "pre-commit": "lint-staged",
    "postinstall": "husky install"
  },
  "keywords": [
    "game",
    "clicker",
    "tap-to-earn",
    "worldcoin",
    "world-id",
    "wld",
    "crypto",
    "blockchain",
    "web3",
    "pwa",
    "progressive-web-app",
    "mobile-game",
    "ethereum",
    "siwe",
    "rainbowgold"
  ],
  "author": {
    "name": "RainbowGold Team",
    "email": "dev@rainbowgold.games",
    "url": "https://rainbowgold.games"
  },
  "license": "MIT",
  "homepage": "https://rainbowgold-tap.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/LenaH6/RainbowGold-Tap.git"
  },
  "bugs": {
    "url": "https://github.com/LenaH6/RainbowGold-Tap/issues",
    "email": "bugs@rainbowgold.games"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "ethers": "^6.8.1",
    "siwe": "^2.1.4",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "rate-limiter-flexible": "^3.0.8",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "node-cron": "^3.0.3",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "axios": "^1.6.2",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "crypto-js": "^4.2.0",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "@worldcoin/idkit": "^1.1.3",
    "@worldcoin/id": "^2.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "rollup": "^4.6.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-replace": "^5.0.5",
    "vitest": "^1.0.1",
    "jsdom": "^23.0.1",
    "@vitest/coverage-v8": "^1.0.1",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.1",
    "lint-staged": "^15.2.0",
    "husky": "^8.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "snyk": "^1.1268.0",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "port": 3000,
    "host": "localhost"
  },
  "funding": {
    "type": "crypto",
    "url": "https://rainbowgold.games/donate"
  },
  "files": [
    "api/",
    "lib/",
    "src/",
    "public/",
    "database/",
    "scripts/",
    "index.html",
    "vercel.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "workspaces": [
    "packages/*"
  ],
  "overrides": {
    "semver": "^7.5.4"
  },
  "pnpm": {
    "overrides": {
      "semver": "^7.5.4"
    }
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  },
  "packageManager": "npm@9.8.1",
  "prisma": {
    "schema": "database/schema.prisma"
  },
  "vercel": {
    "functions": {
      "api/**/*.js": {
        "runtime": "@vercel/node"
      }
    },
    "redirects": [
      {
        "source": "/game",
        "destination": "/",
        "permanent": false
      }
    ],
    "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, PUT, DELETE, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, Authorization"
          }
        ]
      }
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js",
      "lib/**/*.js",
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "api/",
      "lib/",
      "server.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "public/",
      "coverage/",
      "*.test.js"
    ],
    "delay": 1000
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "security"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "no-undef": "error",
      "security/detect-object-injection": "error",
      "security/detect-sql-injection": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "eslint",
      "prettier"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "coverage/**",
      "node_modules/**"
    ]
  },
  "size-limit": [
    {
      "path": "src/js/**/*.js",
      "limit": "50 KB"
    },
    {
      "path": "src/css/**/*.css",
      "limit": "20 KB"
    }
  ],
  "bundlewatch": {
    "files": [
      {
        "path": "public/**/*.js",
        "maxSize": "100kb"
      },
      {
        "path": "public/**/*.css",
        "maxSize": "30kb"
      }
    ]
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm test"
    }
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "verbose": true
  },
  "c8": {
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 80
  },
  "tap": {
    "coverage": true,
    "check-coverage": true
  },
  "mocha": {
    "require": "test/helpers/setup.js",
    "recursive": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "18"
          }
        }
      ]
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "cssnano": {}
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "semantic-release": {
    "branch": "main"
  },
  "snyk": true,
  "oclif": {
    "commands": "./cli/commands",
    "bin": "rgold",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "pm2": {
    "apps": [
      {
        "name": "rainbowgold-tap",
        "script": "server.js",
        "instances": "max",
        "exec_mode": "cluster",
        "env": {
          "NODE_ENV": "production",
          "PORT": 3000
        }
      }
    ]
  },
  "docker": {
    "image": "node:18-alpine",
    "workdir": "/app",
    "expose": [
      3000
    ]
  },
  "kubernetes": {
    "namespace": "rainbowgold",
    "deployment": "rainbowgold-tap",
    "service": "rainbowgold-tap-service"
  }
}